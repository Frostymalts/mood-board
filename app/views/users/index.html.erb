<%=
  link_to('New User', new_user_path, class: 'btn btn-info')
%>
<br/><br/>
<% @users.each do |user| %>
  <%= link_to(
        image_tag(
          user.image_url,
          alt: user.full_name,
          title: user.full_name,
          id: user.slug,
          class: 'img-small img-rounded'
        ),
        user_path(user)
      )%>
<% end %>
