<% field_size = '50' %>
<%= form_for :person, url: mood_index_path, method: :post do |f| %>
<table>
  <tr>
    <th align='right'>Name:</th>
    <td><%= f.text_field :name, size: field_size %></td>
  </tr>
  <tr>
    <th align='right'>E-mail:</th>
    <td><%= f.text_field :email, size: field_size %></td>
  </tr>
  <tr align='center'>
    <td colspan='2'>
      <%= f.submit 'Create Person' %>
    </td>
  </tr>
</table>
<% end %>
